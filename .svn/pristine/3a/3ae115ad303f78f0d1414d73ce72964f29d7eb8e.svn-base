	Cann, Nois, Red, Ir, I, II, III, avR,
	avL, avF, v1, v2, v3, v4, v5, v6, MaxData
};

typedef QVector<float> RawData;

enum MsPerScreen
{
	ONE_SEC		= 1000,
	TWO_SEC		= 2000,
	FOUR_SEC	= 4000,
	EIGHT_SEC	= 8000,
